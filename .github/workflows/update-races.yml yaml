name: MAJ automatique calendrier Vincennes

on:
  schedule:
    - cron: '0 5 * * 1'  # Chaque lundi √† 5h UTC (6h Paris hiver, 7h √©t√©)
  workflow_dispatch:       # Permet de lancer manuellement

jobs:
  update-races:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Installer Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20.x'

      - name: Installer les d√©pendances
        run: npm install jsdom node-fetch

      - name: Scraper calendrier Equidia et g√©n√©rer static/races.json
        run: node scripts/scrape-equidia.js

      - name: Commit et push des mises √† jour
        run: |
          git config --global user.name 'github-actions[bot]'
          git config --global user.email 'github-actions[bot]@users.noreply.github.com'
          git add static/races.json || echo "Aucun fichier √† ajouter"
          git commit -m "ü§ñ Maj automatique calendrier Vincennes [bot]" || echo "Pas de modifications"
          git push || echo "Pas de modifications √† pousser"
